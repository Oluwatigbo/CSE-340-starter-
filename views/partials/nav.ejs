<nav>
  <ul>
    <% if (typeof nav !== 'undefined' && Array.isArray(nav) && nav.length > 0) { %>
      <!-- Dynamic nav from utilities.getNav() (e.g., DB classifications) -->
      <% nav.forEach(item => { %>
        <li><a href="<%= item.href || '#' %>"><%= item.title || 'Link' %></a></li>
      <% }) %>
    <% } else { %>
      <!-- Fallback to your static structure (hardcoded links) -->
      <li><a href="/">Home</a></li>
      <li><a href="/inv/type/3">Custom</a></li>  <!-- Assume classification_id=3 for Custom -->
      <li><a href="/inv/type/1">Sedan</a></li>   <!-- Assume ID=1 for Sedan -->
      <li><a href="/inv/type/2">SUV</a></li>     <!-- Assume ID=2 for SUV -->
      <li><a href="/inv/type/4">Truck</a></li>   <!-- Assume ID=4 for Truck -->
    <% } %>
    
    <!-- Conditional account links (assumes res.locals from JWT middleware) -->
    <% if (typeof loggedin !== 'undefined' && loggedin) { %>
      <li class="account-dropdown">
        <span>Welcome, <%= accountFirstname || 'User ' %>!</span>
        <% if (accountType === 'Admin' || accountType === 'Employee') { %>
          <a href="/inv/add-classification">Admin Panel</a>
        <% } %>
        <a href="/account/manage">Manage Account</a>
        <a href="/account/logout">Logout</a>
      </li>
    <% } else { %>
      <li><a href="/account/login">Login</a></li>
      <li><a href="/account/register">Register</a></li>
    <% } %>
  </ul>
</nav>

<style>
  /* Basic styles to match your structure; customize or move to public/css/nav.css */
  nav { background-color: #333; padding: 10px; margin-bottom: 20px; }
  nav ul { list-style: none; margin: 0; padding: 0; display: flex; justify-content: center; flex-wrap: wrap; }
  nav li { margin: 0 15px; }
  nav a { color: white; text-decoration: none; padding: 8px 12px; display: block; border-radius: 4px; transition: background-color 0.3s; }
  nav a:hover { background-color: #555; }
  .account-dropdown { display: flex; align-items: center; flex-direction: column; background: none; }
  .account-dropdown span { color: #ffd700; margin: 0 10px; font-weight: bold; }
  @media (max-width: 768px) { 
    nav ul { flex-direction: column; align-items: center; } 
    nav li { margin: 5px 0; } 
  }
</style>